<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.teacher.main.task.TcTaskFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grup Mata Pelajaran"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_subject_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="10dp"
                app:singleSelection="true"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Ujian"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_exam"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/white"
                android:minWidth="0dp"
                app:icon="@drawable/ic_baseline_add_24" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recyclerview_background"
            tools:listitem="@layout/item_st_task"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tugas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_add_assignment"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/white"
                app:icon="@drawable/ic_baseline_add_24"
                android:layout_marginEnd="4dp"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_assignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recyclerview_background"
            tools:listitem="@layout/item_st_task"
            android:layout_marginBottom="?attr/actionBarSize"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

