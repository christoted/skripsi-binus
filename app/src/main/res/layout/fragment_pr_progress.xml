<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.parent.student_detail.progress.PrProgressFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/cpv_score"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cpv_textSize="22sp"
                app:cpv_barColor="#2196f3"
                app:cpv_rimColor="#bbdefb"
                app:cpv_barWidth="15dp"
                app:cpv_rimWidth="18dp"
                app:cpv_maxValue="100"
                app:cpv_textScale="0.8"
                app:cpv_innerContourSize="0dp"
                app:cpv_outerContourSize="0dp"
                tools:cpv_value="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/cpv_attendance"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cpv_textSize="22sp"
                app:cpv_barColor="#2196f3"
                app:cpv_rimColor="#bbdefb"
                app:cpv_barWidth="15dp"
                app:cpv_rimWidth="18dp"
                app:cpv_maxValue="100"
                app:cpv_textScale="0.8"
                app:cpv_innerContourSize="0dp"
                app:cpv_outerContourSize="0dp"
                app:cpv_value="0"
                tools:cpv_value="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absensi"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <at.grabner.circleprogress.CircleProgressView
                android:id="@+id/cpv_achievement"
                android:layout_width="85dp"
                android:layout_height="85dp"
                app:cpv_textSize="22sp"
                app:cpv_barColor="#2196f3"
                app:cpv_rimColor="#bbdefb"
                app:cpv_barWidth="15dp"
                app:cpv_rimWidth="18dp"
                app:cpv_maxValue="100"
                app:cpv_textScale="0.8"
                app:cpv_innerContourSize="0dp"
                app:cpv_outerContourSize="0dp"
                app:cpv_value="0"
                tools:cpv_value="10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pencapaian"
                android:textSize="16sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Grafik"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="auto"
        app:tabIndicatorColor="@color/white"
        app:tabRippleColor="@color/purple_500"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/black"
        android:background="@color/purple_500"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
