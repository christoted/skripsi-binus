<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".module.parent.student_detail.progress.graphic.PrProgressGraphicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Grafik"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"/>

        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ujian"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tv_empty_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada data"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </RelativeLayout>



    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="16dp"
        app:dividerInsetEnd="16dp"
        android:layout_marginVertical="8dp"/>

    <TextView
        android:id="@+id/tv_assignment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tugas"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart_assignment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/tv_empty_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak ada data"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textStyle="italic"/>

    </RelativeLayout>

</LinearLayout>

