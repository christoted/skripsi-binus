<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form_multiple_choice"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="1."
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Jika manusia adalah makhluk. Apakah kamu suka pertanyaan ini?"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_choice_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:background="@color/answer_correct"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_choice_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_indicator_not_answer_key"
                    tools:src="@drawable/ic_indicator_answer_key"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_choice_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Isi jawaban disindfsdfsafdsfsdadadadadasdasdasdfsdafsdfasffsdfasfdsfsafsi"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:background="@color/answer_incorrect"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_choice_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_indicator_not_answer_key"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_choice_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Isi jawaban disindfsdfsafdsfsdadadadadasdasdasdfsdafsdfasffsdfasfdsfsafsi"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

            </LinearLayout>

           <LinearLayout
                android:id="@+id/ll_choice_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_choice_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_indicator_not_answer_key"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_choice_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Isi jawaban disindfsdfsafdsfsdadadadadasdasdasdfsdafsdfasffsdfasfdsfsafsi"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_choice_4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_indicator_not_answer_key"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_choice_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Isi jawaban disindfsdfsafdsfsdadadadadasdasdasdfsdafsdfasffsdfasfdsfsafsi"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_choice_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_choice_5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_indicator_not_answer_key"
                    android:layout_marginEnd="4dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/tv_choice_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Isi jawaban disindfsdfsafdsfsdadadadadasdasdasdfsdafsdfasffsdfasfdsfsafsi"
                    android:textSize="12sp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gambar: "
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_image_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/btn_view_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_photo_camera_back_24"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_score_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nilai: "
                tools:text="Nilai (50): "
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="0"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="[hitung otomatis]"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


