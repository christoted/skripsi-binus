<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".module.student.main.stclass.StClassFragment"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textview_class_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="22sp"
        tools:text="XII - IPA - 1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guru"/>

            <TextView
                android:id="@+id/textview_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Devita"/>

            <Button
                android:id="@+id/button_teacher_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="40"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ketua kelas"/>

            <TextView
                android:id="@+id/textview_classchief_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Teddy"/>

            <Button
                android:id="@+id/button_classchief_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="40"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teman sekelas"
                android:textAlignment="textEnd"/>

            <Button
                android:id="@+id/button_student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="40"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mata Pelajaran"/>

    <com.example.project_skripsi.utils.custom_views.WrapContentViewPager
        android:id="@+id/viewpager_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabl_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>


</LinearLayout>