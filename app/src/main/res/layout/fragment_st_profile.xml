<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".module.student.main.home.profile.StProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="200dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Profile"
            android:textColor="@color/black"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp"/>

        <ImageView
            android:id="@+id/imv_logout"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/profile_empty"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Luis"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:text="Nomor Induk Siswa (NIS)"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:text=":"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tv_nis"
                        android:text="21"/>
                </TableRow>
            </TableLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Sekolah"/>
                    <TextView
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_school_name"
                        android:text="SMA METHODIST-3"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Kelas"/>
                    <TextView
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_class_name"
                        android:text="XII-IPA-2"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="No. Absensi"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:text=":"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tv_attendance_number"
                        android:text="21"/>
                </TableRow>
            </TableLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Alamat"/>
                    <TextView
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:text="Jalan Asia"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Nomor Telepon"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:text=":"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tv_phone_number"
                        android:text="0823677772"/>
                </TableRow>
            </TableLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:text="Umur"/>
                    <TextView
                        android:text=":"/>
                    <TextView
                        android:id="@+id/tv_age"
                        android:text="21"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Jenis Kelamin"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:text=":"
                        android:layout_marginEnd="8dp"/>
                    <TextView
                        android:id="@+id/tv_gender"
                        android:text="laki-laki"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerInsetStart="8dp"
        app:dividerInsetEnd="8dp"/>

</LinearLayout>

